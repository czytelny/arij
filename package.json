{
  "name": "arij",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "start": "babel-node app/server.js --presets es2015",
    "server:watch": "nodemon app/server.js --exec babel-node --presets es2015",
    "test": "mocha \"./app/**/*.spec.js\" --compilers js:babel-core/register --require ./app/test_helper.js --recursive",
    "test:watch": "npm run test -- --watch",
    "build": "npm run build:public:vendor & npm run build:public & npm run build:css",
    "build:public": "browserify -t [ babelify --presets [ es2015 react ] ] app/public/src/index.js -o app/public/dist/arij.js -x=react-dom -x=react -x=react-router -x=redux -x=react-redux -x=socket.io-client -x=immutable -x=underscore -d",
    "build:public:watch": "watchify -t [ babelify --presets [ es2015 react ] ] app/public/src/index.js -o app/public/dist/arij.js -x=react-dom -x=react -x=react-router -x=redux -x=react-redux -x=socket.io-client -x=immutable -x=underscore -d -v",
    "build:public:vendor": "browserify -o app/public/dist/vendor.js -r=react-dom -r=react -r=react-router -r=redux -r=react-redux -r=socket.io-client -r=immutable -r=underscore",
    "build:css": "lessc app/public/less/arij.less > app/public/css/arij.css",
    "build:css:watch": "nodemon --watch app/public/less/*.less --ext less --exec npm run build:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/czytelny/arij.git"
  },
  "author": "Michal Chwedczuk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/czytelny/arij/issues"
  },
  "homepage": "https://github.com/czytelny/arij#readme",
  "dependencies": {
    "bcryptjs": "^2.3.0",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "http-status-codes": "^1.0.6",
    "immutable": "^3.8.1",
    "mongoose": "^4.5.9",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.7.0",
    "redux": "^3.5.2",
    "redux-socket.io": "^1.2.0",
    "redux-thunk": "^2.1.0",
    "socket.io": "^1.4.8",
    "socket.io-client": "^1.4.8",
    "underscore": "^1.8.3",
    "watchify": "^3.7.0",
    "when": "^3.7.7",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "chai-immutable": "^1.6.0",
    "del": "^2.2.2",
    "less": "^2.7.1",
    "mocha": "^3.1.0",
    "nodemon": "^1.10.0",
    "redux-mock-store": "^1.2.1",
    "run-sequence": "^1.2.2",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
